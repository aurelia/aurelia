{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach Karma Chrome",
      "address": "localhost",
      "port": 9333,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      },
      "skipFiles": [
        "chai",
        "karma",
        "karma-chai",
        "karma-mocha",
        "mocha",
        "sinon",
        "sinon-chai"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch current mocha test",
      "runtimeArgs": [
        "mocha"
      ],
      "outputCapture": "std",
      "runtimeExecutable": "npx",
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/packages/__tests__/tsconfig-vscode.json"
      },
      "args": [
        "--color",
        "--require",
        "source-map-support/register",
        "--require",
        "ts-node/register",
        "--require",
        "esm",
        "--globals",
        "expect",
        "--timeout",
        "999999",
        "setup-node.ts",
        "${file}",
      ],
      "cwd": "${workspaceRoot}/packages/__tests__",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch mocha kernel tests",
      "runtimeArgs": [
        "mocha"
      ],
      "outputCapture": "std",
      "runtimeExecutable": "npx",
      "args": [
        "${workspaceRoot}/packages/__tests__/setup-node.ts",
        "${workspaceRoot}/packages/__tests__/1-kernel",
        "--color",
        "--require",
        "source-map-support/register",
        "--require",
        "ts-node/register",
        "--require",
        "esm",
        "--recursive",
        "--globals",
        "expect",
        "--timeout",
        "999999"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch mocha runtime tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/packages/runtime-html-jsdom/test/tsconfig.json"
      },
      "args": [
        "${workspaceRoot}/packages/jit-html-jsdom/test/setup-node.ts",
        "${workspaceRoot}/packages/jit-html/test/unit/template-element-factory.spec.ts", // remember to change this to the file you want to debug (and you may need to remove this comment as well for VS Code's json parser)
        "-c",
        "-R",
        "progress",
        "-r",
        "source-map-support/register",
        "-r",
        "ts-node/register",
        "-r",
        "esm",
        "--recursive",
        "--globals",
        "expect",
        "--timeout",
        "999999",
        "--watch",
        "--watch-extensions",
        "ts"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch mocha aot tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/packages/__tests__/tsconfig.json"
      },
      "args": [
        "-r",
        "esm",
        "--opts",
        "${workspaceRoot}/packages/__tests__/mocha.opts",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/setup-node.js",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/aot/**/*.spec.js"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch mocha route-recognizer tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/packages/__tests__/tsconfig.json"
      },
      "args": [
        "-r",
        "esm",
        "--opts",
        "${workspaceRoot}/packages/__tests__/mocha.opts",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/setup-node.js",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/router/route-recognizer.spec.js"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch mocha scheduler tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/packages/__tests__/tsconfig.json"
      },
      "args": [
        "-r",
        "esm",
        "--opts",
        "${workspaceRoot}/packages/__tests__/mocha.opts",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/setup-node.js",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/2-runtime/scheduler.spec.js"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch mocha router tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/packages/__tests__/tsconfig.json"
      },
      "args": [
        "--opts",
        "${workspaceRoot}/packages/__tests__/mocha.opts",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/setup-node.js",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/router/router.spec.js"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeArgs": [
        "-r",
        "esm"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run AOT",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}\\packages\\__tests__\\dist\\esnext\\__tests__\\setup-test262.js",
      "runtimeArgs": [
        "-r",
        "esm"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch mocha validation tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/packages/__tests__/tsconfig.json"
      },
      "args": [
        "-r",
        "esm",
        "--opts",
        "${workspaceRoot}/packages/__tests__/mocha.opts",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/setup-node.js",
        "${workspaceRoot}/packages/__tests__/dist/esnext/__tests__/validation*/**/*.spec.js"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "serve router-layout test app",
      "args": [
        "-r",
        "esm",
        "${workspaceRoot}/test/router-layouts/node_modules/@aurelia/http-server/dist/esnext/cli.js",
        "au.conf.js",
      ],
      "cwd": "${workspaceRoot}/test/router-layouts/",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch mocha runtime tests - new",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "env": {
        "TS_NODE_PROJECT": "${workspaceRoot}/packages/__tests__/tsconfig.json"
      },
      "args": [
       "--ui",
       "bdd",
       "--reporter",
       "min",
       "--colors",
       "--recursive",
       "--timeout",
       "5000",
       "--watch-extensions",
       "js",
       "${workspaceRoot}/packages/__tests__/dist/esm/__tests__/setup-node.js",
       "${workspaceRoot}/packages/__tests__/dist/esm/__tests__/2-runtime/*.spec.js"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
