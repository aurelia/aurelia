// Place your settings in this file to overwrite default and user settings.
{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "html.format.endWithNewline": true,
  "eslint.validate": [
    "javascript",
    {
      "autoFix": true,
      "language": "typescript"
    }
  ],
  "eslint.workingDirectories": [
    { "directory": "packages/__tests__", "changeProcessCWD": true },
    { "directory": "packages/aot", "changeProcessCWD": true },
    { "directory": "packages/au", "changeProcessCWD": true },
    { "directory": "packages/aurelia", "changeProcessCWD": true },
    { "directory": "packages/babel-jest", "changeProcessCWD": true },
    { "directory": "packages/fetch-client", "changeProcessCWD": true },
    { "directory": "packages/http-server", "changeProcessCWD": true },
    { "directory": "packages/i18n", "changeProcessCWD": true },
    { "directory": "packages/kernel", "changeProcessCWD": true },
    { "directory": "packages/metadata", "changeProcessCWD": true },
    { "directory": "packages/platform", "changeProcessCWD": true },
    { "directory": "packages/platform-browser", "changeProcessCWD": true },
    { "directory": "packages/plugin-conventions", "changeProcessCWD": true },
    { "directory": "packages/plugin-gulp", "changeProcessCWD": true },
    { "directory": "packages/parcel-transformer", "changeProcessCWD": true },
    { "directory": "packages/route-recognizer", "changeProcessCWD": true },
    { "directory": "packages/router", "changeProcessCWD": true },
    { "directory": "packages/runtime", "changeProcessCWD": true },
    { "directory": "packages/runtime-html", "changeProcessCWD": true },
    { "directory": "packages/store", "changeProcessCWD": true },
    { "directory": "packages/testing", "changeProcessCWD": true },
    { "directory": "packages/ts-jest", "changeProcessCWD": true },
    { "directory": "packages/validation", "changeProcessCWD": true },
    { "directory": "packages/validation-html", "changeProcessCWD": true },
    { "directory": "packages/validation-i18n", "changeProcessCWD": true },
    { "directory": "packages/webpack-loader", "changeProcessCWD": true }
  ],
  "emmet.triggerExpansionOnTab": true,
  "search.exclude": {
    "**/.vscode": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
  },
  "files.autoSave": "off",
  "files.watcherExclude": {
    "**/coverage/**": true,
    "**/node_modules/*/**": true
  },
  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.importModuleSpecifier": "relative",
  "workbench.colorCustomizations": {
    "activityBar.background": "#563f80",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#ab7354",
    "activityBarBadge.foreground": "#15202b",
    "titleBar.activeBackground": "#3f2e5e",
    "titleBar.inactiveBackground": "#3f2e5e99",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#3f2e5e",
    "statusBarItem.hoverBackground": "#563f80",
    "statusBar.foreground": "#e7e7e7"
  },
  "workbench.tree.indent": 16,
  "git.pullTags": false,
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "eslint.run": "onSave",
  "eslint.useESLintClass": true
}
