{
  "extends": "../tsconfig-build.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declarationDir": "dist/types",
    "outDir": "dist/cjs",
    "rootDir": "src",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "emitDecoratorMetadata": true,
    "strict": false,
    "alwaysStrict": true,
    "strictNullChecks": true,

    "jsx": "react",
    "jsxFactory": "hJsx",

    "types": [
      "node",
      "mocha"
    ]
  },
  "include": ["."],
  "exclude": [
    "router/e2e",
    "dist"
  ]
}
