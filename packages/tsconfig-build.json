{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "module": "umd",
    "moduleResolution": "node",
    "sourceMap": true,
    "stripInternal": true,
    "target": "es2018"
  }
}
