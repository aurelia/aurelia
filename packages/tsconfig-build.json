{
  "compilerOptions": {
    "pretty": true,
    "lib": ["esnext"],
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "rootDir": ".",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "stripInternal": true,

    "strict": true,

    "types": []
  }
}
