{
  "compilerOptions": {
    "pretty": true,
    "lib": ["esnext"],
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "rootDir": ".",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmitOnError": true,

    "noImplicitThis": true,

    "skipLibCheck": true,

    "alwaysStrict": true,
    "preserveConstEnums": true,
    "stripInternal": true,

    "types": []
  }
}
