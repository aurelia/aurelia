{
  "compilerOptions": {
    "pretty": true,
    "lib": ["esnext"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "rootDir": "../",

    "sourceMap": true,

    "skipLibCheck": true,

    "alwaysStrict": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true
  }
}
