{
  "name": "doc-example",
  "description": "An Aurelia 2 client application.",
  "version": "0.1.1",
  "dependencies": {
    "@aurelia/debug": "0.5.0",
    "@aurelia/fetch-client": "0.5.0",
    "@aurelia/jit-html": "0.5.0",
    "@aurelia/jit-html-browser": "0.5.0",
    "@aurelia/jit": "0.5.0",
    "@aurelia/kernel": "0.5.0",
    "@aurelia/runtime-html": "0.5.0",
    "@aurelia/runtime-html-browser": "0.5.0",
    "@aurelia/runtime": "0.5.0",
    "@aurelia/router": "0.5.0",
    "promise-polyfill": "^8.1.3"
  },
  "devDependencies": {
    "htmlhint": "^0.11.0",
    "rimraf": "^3.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^1.0.0",
    "css-loader": "^3.2.0",
    "@aurelia/webpack-loader": "0.5.0",
    "ts-loader": "^6.2.1",
    "@types/node": "^12.12.7",
    "typescript": "^3.7.2",
    "tslint": "^5.20.1",
    "cypress": "^3.6.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.6.0",
    "http-server": "0.9.0"
  },
  "scripts": {
    "lint:html": "htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html",
    "start": "webpack-dev-server",
    "build": "rimraf dist && webpack --mode=production",
    "lint:js": "tslint --project tsconfig.json",
    "watch": "webpack-dev-server --no-inline",
    "serve": "http-server -c-1 -p 9000 dist",
    "build-serve": "rimraf dist && webpack --mode=production && http-server -c-1 -p 9000 dist",
    "now": "rimraf dist && webpack --config webpack.config.js && cd dist && now && cd .."
  }
}
