{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "stripInternal": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["es2017", "dom"]
  },
  "include": ["src"],
  "atom": {
    "rewriteTsconfig": false
  }
}
